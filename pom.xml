	<profiles>
		<profile>
			<id>dev</id>
			<properties>
				<envValue>dev</envValue>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>  
                <filters>  
                    <filter>src/main/resources/conf/jdbc_dev.properties</filter>  
                </filters>  
            </build> 
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<envValue>test</envValue>
			</properties>
			<build>  
                <filters>  
                    <filter>src/main/resources/conf/jdbc_test.properties</filter>  
                </filters>  
            </build> 
		</profile>
		<profile>
			<id>pre</id>
